# cd
alias ..='cd ..'

# ls
alias ls="ls -G"
alias l="ls -lAh"
alias ll="ls -l"
alias la='ls -A'

# git
alias gl='git pull'
alias gls='git log --pretty=short'
alias gd='git diff'
alias gc='git commit'
alias gca='git commit -a'
alias gco='git checkout'
alias gpo='git push origin'
alias gph='git push heroku'
alias gb='git branch'
alias gs='git status -sb'
alias grm="git status | grep deleted | awk '{print \$3}' | xargs git rm"
alias gaa='git ls-files --other --exclude-standard |xargs git add'
alias gfrom='git fetch -a ; git rebase origin/master'
alias changelog='git log `git log -1 --format=%H -- CHANGELOG*`..; cat CHANGELOG*'

# rm
alias rm='rm -i'

# rails
alias migrate='rake db:migrate db:test:clone'

# dotfiles
alias dotfiles='cd ~/.dotfiles'

# Rake
alias rake='bundle exec rake'

# Misc
alias hgrep='history |grep'
alias oldpwd='cd $OLDPWD'
alias reload='. ~/.bash_profile'

# Changing directories
function c { cd ~/code/$1; }
function gopath { cd $GOPATH; }
fnction dropbox { cd ~/Dropbox/$1; }

# Tmux - Copy aliases from buffer to clipboard
alias tm_cb='tmux show-buffer | pbcopy ; echo "Buffer Copied."'
